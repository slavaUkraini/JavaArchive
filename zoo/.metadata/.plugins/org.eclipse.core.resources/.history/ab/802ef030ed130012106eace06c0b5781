//import java.io.IOException;

public class Animal {
	
	private String name;//що воно таке, оце поле
	private String type;
	private int health;
	private int food;
	private boolean avail;

	public Animal(String name, String type/*, int health, int food, boolean avail*/){
		//ім'я, що за тварина, здоров'я, харчування, в зоопарку чи втік(тру, фолс)
		this.name = name;//this обов'зково?
		this.type = type;
		this.health = 100;//health;
		this.food = 100;//food;
		this.avail = true;//avail;
	}
	public String getName(){ // метод повертає ім'я
		return this.name;
	}
	
	public String getType(){ 
		return this.type;
	}
	
	public int getHealth(){ 
		return this.health;
	}
	
	public void goAway() {
		this.avail = false;
		System.out.println(this.name + " більше не живе в зоопарку.");
	}
	
		
	}
	//public Animal changeGrade(double newgrade){
		//averageGrade=newgrade;
		//return this;
	//}
	
	//public Student becomeOlder(){
		//++age;
		//return this;
	//}

}
