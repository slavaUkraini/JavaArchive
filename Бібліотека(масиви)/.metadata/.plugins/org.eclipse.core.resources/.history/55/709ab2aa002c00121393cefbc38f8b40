import ua.com.vita.krainik.firstPackage.*;
import ua.com.vita.krainik.firstPackage.DataInput;


public class Tester {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		Array ar = new Array();
		ar.printmass();
		ar.delEnd();
		ar.delete(2);
		ar.delete(0);
		System.out.println("Введіть 6 елементів");
		for (int i = 0; i<6; i++)
		ar.addEnd(DataInput.getInt());
		System.out.println("Видаляємо останній");
		ar.delEnd();
		System.out.println("Виводимо");
		ar.printmass();
		System.out.println("Сортуємо за спаданням");
		ar.sortSpad();
		System.out.println("Сортуємо за зростанням");
		ar.sortZrost();
		System.out.println("Виводимо 10, 4, 0, 3 елементи");
		System.out.println(ar.getElement(10));
		System.out.println(ar.getElement(4));
		System.out.println(ar.getElement(0));
		System.out.println(ar.getElement(3));
		ar.findElement(4);
		ar.findElement(10);		
		System.out.println("Виводимо");
		ar.printmass();
		System.out.println("Видаляємо увесь");
		ar.clear();
		System.out.println("Виводимо");
		ar.printmass();
		ar.addEnd(1);
		ar.printmass();
		System.out.println("Усьо поки");
	}

}
